javascript:
  date = new Date('#{datetime.try(:iso8601)}');
  document.write(date.getHours() + ':' + ((100 + date.getMinutes())+'').slice(1));
  now = new Date();
  if (now.getDate() != date.getDate() || now.getMonth() != date.getMonth() || now.getFullYear() != date.getFullYear()){
    document.write(' ' + window.abbrDayNames[date.getDay()]);
  }
  if (now.getMonth() != date.getMonth() || now.getFullYear() != date.getFullYear()) {
    document.write(', ' + date.getDate() + '/' + (date.getMonth()+1));
  }
  if (now.getFullYear() != date.getFullYear()) {
    document.write('/' + date.getFullYear() );
  }
