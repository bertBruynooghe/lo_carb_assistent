<%= form_for @blood_sugar_reading do |blood_sugar_reading_form| %>
<% if @blood_sugar_reading.errors.any? %>
  <div id="error_explanation" %>
    <h2><%= I18n.t('errors.save_failed', errors: pluralize(@blood_sugar_reading.errors.count, I18n.t(:error)), model_name: BloodSugarReading.model_name.name) %></h2>
    <ul>
      <% @blood_sugar_reading.errors.full_messages.each do |message| %>
        <li><%= message %>
      <% end %>
  </div>
<% end %>
  <div class="field">
    <%= blood_sugar_reading_form.label :value %>
    <%= blood_sugar_reading_form.number_field :value %>
  </div>
  <div class="field">
    <%= blood_sugar_reading_form.label :read_time %>
    <%= blood_sugar_reading_form.text_field :read_time, class: 'bloodSugarReading-readTimeInput' %>
  </div>
  <div class="actions">
    <%= blood_sugar_reading_form.submit %>
  </div>
<% end %>
