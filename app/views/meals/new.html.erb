<%# This page is used to render either the new meals page itself, 
    or the selected/new ingredient. All information is in the form object.
%>
<% if %i(edit new).include? @form_object.ingredient_action %>
  <%= render "ingredients/#{@form_object.ingredient_action}", form_object: @form_object %>
<% elsif @form_object.ingredient_action == :lookup %>
  <% controller.redirect_to "https://www.duckduckgo.com/?#{URI.encode_www_form(q: @form_object.ingredients[@form_object.ingredient_index].name)}+koolhydraten" %>
<% else %>
  <div data-controller="new-meal">
    <%= render 'form', form_object: @form_object %>
    <%= link_to 'Back', meals_path %>
  </div>
<% end %>
